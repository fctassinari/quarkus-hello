apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: "dev-{{ app_name }}"
  namespace: openshift-gitops
spec:
  destination:
    namespace: "dev-{{ app_name }}"
    server: https://kubernetes.default.svc
  project: "{{ app_name }}"
  source:
    path: environments/{{ item }}
    repoURL: http://{{ r_gogs_route.resources[0].spec.host }}/gogs/{{ app_name }}-config
    targetRevision: HEAD
  syncPolicy:
    automated:
      prune: false
      selfHeal: false
