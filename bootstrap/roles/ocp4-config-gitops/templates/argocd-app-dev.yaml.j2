apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: "{{ app_namespace }}"
  namespace: openshift-gitops
spec:
  destination:
    namespace: "{{ app_namespace }}"
    server: https://kubernetes.default.svc
  project: quarkus-hello
  source:
    path: environments/dev
    repoURL: http://{{ r_gogs_route.resources[0].spec.host }}/gogs/quarkus-hello-config
    targetRevision: HEAD
  syncPolicy:
    automated:
      prune: false
      selfHeal: false
