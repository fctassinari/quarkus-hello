apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: pipe-ingress
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-prod
    kubernetes.io/ingress.class: openshift-default
spec:
  tls:
    - hosts:
        - rt-quarkus-hello-quarkus-hello-hml.apps.cluster-qq995.sandbox2890.opentlc.com
      secretName: sct-qh-tls
  rules:
    - host: '*.apps.cluster-qq995.sandbox2890.opentlc.com'
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: svc-quarkus-hello
                port:
                  number: 80
